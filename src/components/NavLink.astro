---
type Props = {
  link: string;
  name: string;
};
const { link, name }: Props = Astro.props;
---

<li class="link relative text-base font-medium uppercase lg:text-lg">
  <a href={link}>{name}</a>
</li>

<style>
  .link::before {
    content: "";
    position: absolute;
    width: 100%;
    height: 2px; /* Ã‰paisseur de la ligne */
    bottom: -3px;
    background-color: white; /* Couleur du soulignement de votre choix */
    visibility: hidden;
    transform: scaleX(0);
    transition: all 0.3s ease-in-out;
  }

  .link:hover::before {
    visibility: visible;
    transform: scaleX(1);
  }
</style>
